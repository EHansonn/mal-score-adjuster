{
  "description": "Adjusts the scores on MyAnimeList to show the original scores and the adjusted scores.",
  "manifest_version": 2,
  "name": "Mal Score Adjuster",
  "version": "1.3",
  "permissions": [
    "https://raw.githubusercontent.com/*",
    "https://myanimelist.net/*"
  ],
  "homepage_url": "https://github.com/EHansonn/mal-score-adjuster",
  "browser_specific_settings": {
    "gecko": {
      "id": "mal-score-adjuster@ehansonn",
      "update_url": "https://raw.githubusercontent.com/EHansonn/mal-score-adjuster/main/extension/updates.json"
    }
  },
  "icons": {
    "48": "icons/border-48.png",
    "96": "icons/border-96.png"
  },
  "browser_action": {
    "default_icon": "icons/border-48.png",
    "default_title": "MAL Score Adjuster"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://myanimelist.net/*"],
      "js": ["scores.js"]
    }
  ]

}
